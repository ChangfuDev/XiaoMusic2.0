<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--修改menu更多的图标-->
        <item name="android:actionOverflowButtonStyle">@style/Action_OverflowButtonStyle</item>
        <!--<item name="android:colorEdgeEffect">#b4ffffff</item>-->
    </style>


    <style name="TextLabel" parent="AppTheme.Transparent">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

    <!--修改menu更多的图标-->
    <style name="Action_OverflowButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/p9</item>
    </style>

    <!--透明状态栏-->
    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--解决启动时白屏-->
    <style name="AppTheme.Launch" parent="AppTheme.Transparent">
        <!--会和转场动画有冲突-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@color/colorTransparent</item>
    </style>

    <style name="WaterEffect_gray">
        <item name="android:background">@drawable/selector_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="WaterEffect_transparent">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <!--android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@null"
        android:focusable="true"-->
    <style name="WaterEffect_circle">
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SearchEditTextStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/colorLightWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

    <!--SmartRefreshLayout禁止刷新样式-->
    <style name="StyleForbidRefresh">
        <!--禁止回弹-->
        <item name="srlEnableOverScrollDrag">false</item>
        <item name="srlEnableRefresh">false</item>
    </style>

    <style name="popMenu_under_actionBar" parent="@style/ThemeOverlay.AppCompat.Light">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <!--<item name="overlapAnchor">false</item>-->
        <!--<item name="android:background">@color/colorAccent</item>-->
        <!--<item name="android:dropDownWidth">wrap_content</item>-->
        <!--<item name="android:layout_marginRight">5dp</item>-->
        <!--&lt;!&ndash; 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar &ndash;&gt;-->
        <!--<item name="android:dropDownHorizontalOffset">10dp</item>-->
        <!--<item name="android:dropDownVerticalOffset">10dp</item>-->
        <item name="android:textColor">@color/colorIcon</item>
        <item name="android:textSize">12sp</item>
        <item name="android:tint">@color/colorIcon</item>
    </style>

    <style name="StyleTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="StyleTitle.Black" parent="StyleTitle">
        <item name="android:textColor">@color/colorTitle</item>
    </style>

    <style name="StyleSubTitle.Black" parent="StyleTitle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorSubTitle</item>
    </style>

    <style name="StyleSimpleLayout" parent="WaterEffect_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="leftIconTint">@color/colorIcon</item>
        <item name="titleColor">@color/colorTitle</item>
        <item name="titleLeftMargin">10dp</item>
        <item name="titleSize">12sp</item>
    </style>


    <style name="StyleTextInputLayout_Register" parent="AppTheme.Transparent">
        <item name="android:theme">@style/TextLabel</item>
        <item name="android:textColorHint">@color/colorWhite</item>
    </style>

    <style name="StyleEditText_Register">
        <!--<item name="android:background">@drawable/selector_bg_edit_yellow</item>-->
        <item name="android:backgroundTint">@color/colorWhite</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>


</resources>
