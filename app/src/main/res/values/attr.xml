<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShapeTextView">
        <attr name="solidColor" format="reference|color" />
        <attr name="strokeColor" format="reference|color" />
        <attr name="strokeWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="LrcView">
        <attr name="lrcTextSize" format="dimension" />
        <attr name="lrcLineSpaceSize" format="dimension" />
        <attr name="lrcNormalTextColor" format="reference|color" />
        <attr name="lrcCurrentTextColor" format="reference|color" />
        <attr name="lrcTouchDelay" format="integer" />
        <attr name="noLrcTextSize" format="dimension" />
        <attr name="noLrcTextColor" format="reference|color" />
        <attr name="indicatorLineHeight" format="dimension" />
        <attr name="indicatorTextSize" format="dimension" />
        <attr name="indicatorTextColor" format="reference|color" />
        <attr name="currentIndicateLrcColor" format="reference|color" />
        <attr name="indicatorTouchDelay" format="integer" />
        <attr name="indicatorLineColor" format="reference|color" />
        <attr name="indicatorStartEndMargin" format="dimension" />
        <attr name="iconLineGap" format="dimension" />
        <attr name="playIconWidth" format="dimension" />
        <attr name="playIconHeight" format="dimension" />
        <attr name="playIcon" format="reference" />
    </declare-styleable>


    <declare-styleable name="SimpleLayout">
        <attr name="leftIcon" format="reference" />
        <attr name="leftIconTint" format="color|reference" />

        <attr name="titleLeftMargin" format="dimension" />
        <attr name="title" format="reference|string" />
        <attr name="titleColor" format="color|reference" />
        <attr name="titleSize" format="dimension" />

        <attr name="subTitle" format="reference|string" />
        <attr name="subTitleColor" format="color|reference" />
        <attr name="subTitleSize" format="dimension" />
        <attr name="subTitleRightMargin" format="dimension" />

        <attr name="rightIcon" format="reference" />
        <attr name="rightIconTint" format="color|reference" />
    </declare-styleable>


    <!--签到-->
    <declare-styleable name="SignInView">
        <attr name="siv_signedTextSize" format="dimension|reference" />
        <attr name="siv_signedTextColor" format="color|reference" />
        <attr name="siv_unSignTextSize" format="dimension|reference" />
        <attr name="siv_unSignTextColor" format="color|reference" />
        <attr name="siv_unSignIconColor" format="color|reference" />
        <attr name="siv_signedIconColor" format="color|reference" />
        <attr name="siv_lineColor" format="color|reference" />
        <attr name="siv_lineHeight" format="dimension|reference" />
        <attr name="siv_space" format="dimension|reference" />
    </declare-styleable>


    <!--听歌识曲-->
    <declare-styleable name="ListeningToSongView">
        <attr name="ltsv_wave_color" format="reference|color" />
        <attr name="ltsv_inner_circle_radius" format="dimension" />
        <attr name="ltsv_inner_drawable" format="reference" />
    </declare-styleable>

    <!--等级-->
    <declare-styleable name="GradeView">
        <attr name="gv_gradeBackLineColor" format="reference|color" />
        <attr name="gv_gradeForeLineStartColor" format="reference|color" />
        <attr name="gv_gradeForeLineStopColor" format="reference|color" />
        <attr name="gv_gradeTextColor" format="reference|color" />
        <attr name="gv_gradeTextSize" format="dimension" />
        <attr name="gv_space" format="dimension" />
        <attr name="gv_gradeDividerWidth" format="dimension" />
        <attr name="gv_gradeDividerColor" format="reference|color" />
        <attr name="gv_gradeLineHeight" format="dimension" />
        <attr name="gv_count" format="integer" />
        <attr name="gv_current" format="float" />
    </declare-styleable>

    <!--带状态的音乐进度条-->
    <declare-styleable name="MusicSeekBar">
        <attr name="msb_backColor" format="reference|color" />
        <attr name="msb_secondProgressColor" format="reference|color" />
        <attr name="msb_progressColor" format="reference|color" />
        <attr name="msb_max" format="integer" />
        <attr name="msb_secondProgress" format="integer" />
        <attr name="msb_progress" format="integer" />
        <attr name="msb_thumb" format="reference" />
        <attr name="msb_loading_thumb" format="reference" />
        <attr name="msb_loading_bg" format="reference" />
        <attr name="msb_height" format="dimension"/>
    </declare-styleable>
</resources>