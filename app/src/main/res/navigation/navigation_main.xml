<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.yzx.xiaomusic.ui.main.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_mainFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/musicFragment"
        android:name="com.yzx.xiaomusic.ui.main.MusicFragment"
        android:label="MusicFragment"
        tools:layout="@layout/fragment_music" />
    <fragment
        android:id="@+id/discoverFragment"
        android:name="com.yzx.xiaomusic.ui.main.DiscoverFragment"
        android:label="DiscoverFragment"
        tools:layout="@layout/fragment_discover" />
    <fragment
        android:id="@+id/videoFragment"
        android:name="com.yzx.xiaomusic.ui.main.VideoFragment"
        android:label="VideoFragment"
        tools:layout="@layout/fragment_video" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.yzx.xiaomusic.ui.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/searchResultFragment"
        android:name="com.yzx.xiaomusic.ui.search.result.SearchResultFragment"
        android:label="SearchResultFragment"
        tools:layout="@layout/fragment_search_result" />

    <fragment
        android:id="@+id/singerDetailsFragment"
        android:name="com.yzx.xiaomusic.ui.singer.SingerDetailsFragment"
        android:label="SingerDetailsFragment"
        tools:layout="@layout/fragment_detail_singer">
        <!--<action-->
        <!--android:id="@+id/action_singerDetailsFragment_to_searchFragment"-->
        <!--app:destination="@id/searchFragment" />-->

        <!--<action-->
        <!--android:id="@+id/next_action"-->
        <!--app:popUpTo="@id/launcher_home">-->
        <!--</action>-->
        <action
            android:id="@+id/popToSearchFragment"
            app:popUpTo="@id/searchFragment" />
    </fragment>
</navigation>