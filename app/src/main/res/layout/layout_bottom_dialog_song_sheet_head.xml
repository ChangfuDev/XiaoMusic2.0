<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <ImageView
            android:id="@+id/iv_play_mode"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ady"
            android:tint="@color/colorIcon" />

        <TextView
            android:id="@+id/tv_play_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/listLoop"
            android:textColor="@color/colorTitle"
            android:textSize="12sp"
            tools:ignore="NestedWeights" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:ignore="NestedWeights" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/a2l"
            android:tint="@color/colorIcon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/collectAll"
            android:textColor="@color/colorTitle"
            android:textSize="12sp" />

        <View
            android:layout_width="@dimen/dividerHeight"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:background="@color/colorDivider" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="3dp"
            android:scaleType="centerInside"
            android:src="@drawable/a0s"
            android:tint="@color/colorIcon" />
    </LinearLayout>

    <include layout="@layout/include_divider_horizontal" />

</LinearLayout>