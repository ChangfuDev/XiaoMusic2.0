<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_bottom_music_controller"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:elevation="5dp"
    android:layout_gravity="bottom"
    android:background="@color/colorWhite"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingEnd="5dp"
    android:paddingStart="5dp">

    <com.othershe.library.NiceImageView
        app:corner_radius="@dimen/cornerRadius"
        android:id="@+id/iv_music_cover"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default_song_sheet" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_music_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/colorTitle"
            android:textSize="10sp"
            tools:ignore="SmallSp"
            tools:text="标题" />

        <TextView
            android:id="@+id/tv_music_singer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorSubTitle"
            android:textSize="8sp"
            tools:ignore="SmallSp"
            tools:text="标题" />

    </LinearLayout>


    <com.yzx.xiaomusic.widget.CircleProgress
        android:id="@+id/iv_play_pause"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:padding="5dp" />

    <ImageView
        android:id="@+id/iv_song_sheet"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/aem"
        android:tint="#000" />

</LinearLayout>