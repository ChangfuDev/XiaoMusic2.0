<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_search_album"
    style="@style/WaterEffect_gray"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:paddingEnd="16dp"
        tools:ignore="RtlSymmetry">

        <com.othershe.library.NiceImageView
            app:corner_radius="@dimen/cornerRadius"
            android:id="@+id/iv_head"
            android:layout_width="@dimen/width_common"
            android:layout_height="@dimen/height_common"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default_song_sheet" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_common"
            android:src="@drawable/a28" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/colorTitle"
                android:textSize="12sp"
                tools:text="Back TO December" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_subTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/colorSubTitle"
                    android:textSize="10sp"
                    tools:ignore="SmallSp"
                    tools:text="Taylor Swift" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="75dp"
        android:background="@color/colorDivider" />

</RelativeLayout>