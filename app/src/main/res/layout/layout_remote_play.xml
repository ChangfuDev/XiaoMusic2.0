<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layoutRemoteView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="10dp"
    android:background="@color/colorLightDark"
    android:gravity="center_vertical"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_music_poster"
        android:layout_marginEnd="12dp"

        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:text="娃哈哈"
                android:lines="1"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@id/tv_name"
                android:id="@+id/tv_artist"
                android:text="杨子晓"
                android:lines="1"
                android:textColor="@color/colorLightWhite"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_delete"
                android:tint="@color/colorWhite"
                android:padding="5dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorDivider"
            android:layout_width="match_parent"
            android:layout_height="1px" />
       <LinearLayout
           android:gravity="center_vertical"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <ImageView
               android:tint="@color/colorWhite"
               android:id="@+id/iv_play_previous"
               android:src="@drawable/acu"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content" />

           <ImageView
               android:tint="@color/colorWhite"
               android:id="@+id/iv_play_pause"
               android:src="@drawable/acs"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content" />

           <ImageView
               android:tint="@color/colorWhite"
               android:id="@+id/iv_play_next"
               android:src="@drawable/aco"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"/>

       </LinearLayout>

    </LinearLayout>


</LinearLayout>